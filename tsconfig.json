{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
 "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "src/stories",
    "src/config",
    "**/*.stories.tsx",
    "**/*.stories.mdx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/__stories__",
    "**/__tests__",
    "**/__mocks__"
  ]
}
