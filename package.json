{
  "name": "clera-ui",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "author": {
    "name": "itsferdiardiansa"
  },
  "scripts": {
    "install": "npx only-allow pnpm",
    "prepare": "husky",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist .cache storybook-static",
    "clean-install": "pnpm clean && pnpm i",
    "bundle:es": "babel src --out-dir dist/es --extensions \".ts,.tsx\" --ignore \"**/*.stories.tsx\",\"**/*.test.tsx\",\"**/*.test.ts\",\"**/__stories__\",\"**/__tests__\",\"**/__mocks__\",\"**/config/**\",\"**/stories/**\"",
    "bundle:cjs": "babel src --out-dir dist/lib --extensions \".ts,.tsx\" --ignore \"**/*.stories.tsx\",\"**/*.test.tsx\",\"**/*.test.ts\",\"**/__stories__\",\"**/__tests__\",\"**/__mocks__\",\"**/config/**\",\"**/stories/**\" --plugins @babel/plugin-transform-modules-commonjs",
    "bundle:types": "tsc --emitDeclarationOnly --outDir dist/es && tsc --emitDeclarationOnly --outDir dist/lib",
    "bundle:css": "postcss src/styles/globals.css -o dist/es/clera-ui.css && postcss src/styles/globals.css -o dist/lib/clera-ui.css",
    "bundle:umd": "webpack --config webpack.config.cjs",
    "bundle:meta": "cp README.md LICENSE dist/",
    "bundle:package": "node scripts/generate-package.ts",
    "bundle": "pnpm clean && pnpm bundle:es && pnpm bundle:cjs && pnpm bundle:types && pnpm bundle:css && pnpm bundle:umd && pnpm bundle:meta && pnpm bundle:package",
    "build": "storybook build",
    "changeset": "changeset --no-commit",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "dev": "ts-node --esm scripts/dev.ts",
    "doc:build": "vercel build --target=production",
    "doc:deploy": "pnpm doc:build && vercel deploy --target=production --prebuilt",
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "generate:tokens": "ts-node --esm scripts/generate-tokens.ts --config config/token-gen.json"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
